<Window x:Class="Simple_File_Sender.ContactInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Contact" Height="119" Width="471" ResizeMode="NoResize">
    <Grid>
        <Label Content="Name" HorizontalAlignment="Left" Margin="10,10,0,0" Height="28" VerticalAlignment="Top"/>
        <Label Content="IP Address" HorizontalAlignment="Left" Margin="10,41,0,0" Height="28" VerticalAlignment="Top"/>
        <TextBox x:Name="NameText" HorizontalAlignment="Left" Margin="89,10,0,0" TextWrapping="Wrap" Width="262" Height="25" VerticalAlignment="Top"/>
        <Button x:Name="AddButt" Content="ADD CONTACT" Margin="356,10,12,0" Click="AddButt_Click" Height="59" VerticalAlignment="Top"/>
        <TextBox x:Name="IPText" HorizontalAlignment="Left" Margin="89,44,0,0" TextWrapping="Wrap" Width="262" Height="25" VerticalAlignment="Top"/>
    </Grid>
</Window>
