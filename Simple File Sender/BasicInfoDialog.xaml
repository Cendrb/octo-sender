        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter your username" Height="77" Width="503">
    <Grid>
        <Label Content="Username" HorizontalAlignment="Left" Margin="10,10,0,0" Height="28" VerticalAlignment="Top"/>
        <TextBox x:Name="UsernameText" HorizontalAlignment="Left" Margin="89,10,0,0" TextWrapping="Wrap" Width="262" Height="25" VerticalAlignment="Top"/>
        <Button x:Name="SaveButt" Content="SAVE" Margin="356,10,10,0" Height="25" VerticalAlignment="Top" Click="SaveButt_Click"/>

    </Grid>
</Window>
